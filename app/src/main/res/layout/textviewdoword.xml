<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="374dp"
        android:layout_marginBottom="120dp"
        android:layout_below="@id/toobar"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/custom_background">

        <TextView
            android:id="@+id/textnotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="40dp"
            android:text="Chạm vào micro để nói và nhận phản hồi về âm dược gạch dưới."
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textnotification"
            android:layout_marginTop="70dp"
            android:fontFamily="@string/app_name"
            android:text="Thing"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/decription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/word"
            android:text="/θɪŋ/"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/voice_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/decription"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/ic_volume_up_black_24dp" />

        <TextView
            android:id="@+id/star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/voice_work"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_below="@id/star"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_weight="1"
                android:id="@+id/txtnghia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textAlignment="gravity"
                android:layout_marginBottom="20dp"
                android:text="Nghĩa: "
                android:textSize="20dp" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/mean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:text="Vật chất"
                android:gravity="left"
                android:textAlignment="gravity"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_alignParentBottom="true"
        android:id="@+id/nextword"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        />

</RelativeLayout>